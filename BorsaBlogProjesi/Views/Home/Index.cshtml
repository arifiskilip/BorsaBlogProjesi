
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="bg-dark p-5 mb-5">
            <div class="row no-gutters">
                <div class="col-xl-6 border-right border-lg-0 pr-0 pr-xl-5">
                    <h1 class="text-white add-letter-space">Ana Sayfa</h1>
                </div>
                <div class="col-xl-6 pl-0 pl-xl-5 mt-4 mt-xl-0">
                    <div class="categores-links text-capitalize">
                        <h3 class="text-white add-letter-space mb-3">Kategoriler</h3>
                        @foreach (var item in TempData["Categories"] as List<Category>)
                        {
                            <a class="border" href="/Home/Index/@item.Id">@item.Name</a>
                        }
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-between">
    <div class="col-lg-7">
        @foreach (var item in TempData["Posts"] as List<BlogPost>)
        {
            <div class="card post-item bg-transparent border-0 mb-5">
                <a href="/Home/Detail/@item.Id">
                    <img class="card-img-top rounded-0" src="@item.ImagePath" alt="">
                </a>
                <div class="card-body px-0">
                    <h2 class="card-title">
                        <a class="text-white opacity-75-onHover" href="/Home/Detail/@item.Id">@item.Title</a>
                    </h2>
                    <ul class="post-meta mt-3">
                        <li class="d-inline-block mr-3">
                            <span class="fas fa-clock text-primary"></span>
                            <a class="ml-1" href="/Home/Detail/@item.Id">@item.PostDate.Value.ToShortDateString()</a>
                        </li>
                        <li class="d-inline-block">
                            <span class="fas fa-list-alt text-primary"></span>
                            <a class="ml-1" href="/Home/Detail/@item.Id">@item.Category.Name</a>
                        </li>
                    </ul>
                    @if (item.Description.Length<100)
                    {
                        <p class="card-text my-4">@item.Description ...</p>
                    }
                    else{
                    <p class="card-text my-4">@item.Description.Substring(0,100) ...</p>
                    }
                    <a href="/Home/Detail/@item.Id" class="btn btn-primary">Devamını Oku<img src="~/galaxy/theme/images/arrow-right.png" alt=""></a>
                </div>
            </div>
        }
       
    </div>
</div>

