                                <li><a href="#!">Privacy</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </footer>
            <!-- end of footer -->
        </div>

    </section>

    <!-- END main-wrapper -->
    <!-- All JS Files -->
    <script src="~/galaxy/theme/plugins/jQuery/jquery.min.js"></script>
    <script src="~/galaxy/theme/plugins/bootstrap/bootstrap.min.js"></script>
    <script src="~/admin/plugins/toastr/toastr.js.map"></script>
    <!-- Main Script -->
    <script src="~/galaxy/theme/js/script.js"></script>
</body>
</html>
